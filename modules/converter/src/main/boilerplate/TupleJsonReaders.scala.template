package scjson.converter

import scutil.lang.assoc._

import scjson.converter.{
	JsonConverters		=> JC,
	TupleConverters		=> TC
}

trait TupleJsonReaders  {
	[#implicit def Tuple1Reader[[#T1:JsonReader#,]]:JsonReader[([#T1#,])]	=
			JC.expectObjectMap			>=>
			TC.mapToTuple1([#"1"#])		>=>
			// TODO scutil use mapN
			([#JsonReader[T1]# pair ])	map
			unarrow1#
	]
}
